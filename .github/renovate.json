{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
   ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    "group:recommended",
    "replacements:all",
    "workarounds:all" 
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["^@cfd/"],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "ignoreDeps": ["next"]
}
